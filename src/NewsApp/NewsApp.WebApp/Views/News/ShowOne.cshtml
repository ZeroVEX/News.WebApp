@model NewsApp.WebApp.ViewModels.News.NewsManagementViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Title"];
}
@section Styles
{
    <link href="~/NewsStyle.css" rel="stylesheet" />
}

<form class="mt-3 p-3 text-center border border-dark">
    <div class="mt-3">
        <h1>@Model.Title</h1>
    </div>
    <div class="mt-3">
        <h3>@Model.Subtitle</h3>
    </div>
    @if (Model.ImageData != null)
    {
        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ImageData))" /><br />
    }
    <div class="mt-3">
        <textarea type="text" readonly class="form-control-plaintext" rows="8">@Model.Text</textarea>
    </div>
</form>