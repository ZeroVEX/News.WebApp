@model NewsApp.WebApp.ViewModels.News.NewsManagementViewModel

<form class="text-center" enctype="multipart/form-data" asp-controller="News" asp-action="@Model.Action">
    <div class="form-row">
        <div class="form-group col-md-3"></div>
        <div class="form-group col-md-6">
            <label class="mt-1" asp-for="Title"></label><br />
            <input class="form-control" name="Title" asp-for="Title" type="text" value="@Model.Title" /><br />
            <span asp-validation-for="Title"></span><br />

            <label class="mt-1" asp-for="Subtitle"></label><br />
            <input class="form-control" name="Subtitle" asp-for="Subtitle" type="text" value="@Model.Subtitle" /><br />
            <span asp-validation-for="Subtitle"></span><br />

            <label asp-for="Image"></label><br />
            <input name="Image" asp-for="Image" type="file" class="form-control-file"><br />
            <span asp-validation-for="Image"></span><br />
            @if (Model.ImageData != null)
            {
                <img class="img-max-len" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ImageData))" /><br />
            }

            <label class="mt-1" asp-for="Text"></label><br />
            <textarea class="form-control" name="Text" asp-for="Text" type="text" value="@Model.Text" rows="4"></textarea><br />
            <span asp-validation-for="Text"></span><br />

            <input class="btn btn-primary mt-1" type="submit" value="@Localizer["SaveButton"]" /><br />

            <div asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="form-group col-md-3"></div>
    </div>
</form>