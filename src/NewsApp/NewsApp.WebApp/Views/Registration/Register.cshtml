@model NewsApp.WebApp.ViewModels.Account.RegisterViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Title"];
}

<form class="text-center" method="post" asp-controller="Registration" asp-action="Register">
    <h2 class="ml-3">@Localizer["Header"]</h2>
    <div class="form-row">
        <div class="form-group col-md-3"></div>
        <div class="form-group col-md-6">
            <div asp-validation-summary="ModelOnly"></div><br />

            <label class="mt-1" asp-for="Email"></label><br />
            <input class="form-control mt-1" asp-for="Email" />
            <span asp-validation-for="Email"></span><br />

            <label class="mt-1" asp-for="DisplayName"></label><br />
            <input class="form-control mt-1" asp-for="DisplayName" />
            <span asp-validation-for="DisplayName"></span><br />

            <label class="mt-1" asp-for="Password"></label><br />
            <input class="form-control mt-1" asp-for="Password" />
            <span asp-validation-for="Password"></span><br />

            <label class="mt-1" asp-for="PasswordConfirm"></label><br />
            <input class="form-control mt-1" asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span><br />

            <input class="btn btn-primary" type="submit" value="@Localizer["RegisterButtonText"]" />
        </div>
        <div class="form-group col-md-3"></div>
    </div>
</form>