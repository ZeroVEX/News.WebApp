@model NewsApp.WebApp.ViewModels.Account.LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Title"];
}

<form class="text-center" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
    <h2 class="mt-2">@Localizer["Login"]</h2>
    <div class="form-row">
        <div class="form-group col-md-3"></div>
        <div class="form-group col-md-6">
            <div asp-validation-summary="ModelOnly"></div><br />

            <label class="mt-1" asp-for="Email"></label><br />
            <input class="form-control mt-1" asp-for="Email" />
            <span asp-validation-for="Email"></span><br />

            <label class="mt-1" asp-for="Password"></label><br />
            <input class="form-control mt-1" asp-for="Password" />
            <span asp-validation-for="Password"></span><br />

            <input class="btn btn-primary mt-1" type="submit" value="@Localizer["Login"]" />
        </div>
        <div class="form-group col-md-3"></div>
    </div>
</form>