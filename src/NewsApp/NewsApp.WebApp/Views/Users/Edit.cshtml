@model NewsApp.WebApp.ViewModels.User.EditUserViewModel
@{
    ViewBag.Title = "Editing user";
    Layout = "_Layout";
}

<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="DisplayName">Name</label>
        <input asp-for="DisplayName" class="form-control" />
        <span asp-validation-for="DisplayName"></span>
    </div>
    <div class="form-group">
        <label asp-for="AllRoles">Roles</label><br />
        @foreach (var role in Model.AllRoles)
        {
            <input type="checkbox" name="UserRoles" value="@role.Name"
                   @(Model.UserRoles != null && Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
        }
        <span asp-validation-for="UserRoles"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>